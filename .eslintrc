{
  "extends": "eslint:recommended",
  "rules": {
    "react/jsx-indent-props": [2, 2],
    "no-console": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "AFRAME": true,
    "ga": true,
    "THREE": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "modules": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
     }
  },
  "plugins": [
    "react"
  ]
}
